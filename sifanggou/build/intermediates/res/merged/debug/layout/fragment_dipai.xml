<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_main" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:background="@drawable/ditpo_nav_bg"
        android:orientation="vertical">
        
	    <LinearLayout
	        android:id="@+id/ll_search"
	        android:layout_width="match_parent"
	        android:layout_height="51dp"
	        android:layout_marginLeft="12dp"
	        android:layout_marginRight="12dp"
	        android:layout_marginTop="28dp"
	        android:orientation="horizontal"
	        android:background="@drawable/ditpo_bg_search">
	        
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="16dp"
	            android:src="@drawable/ditpo_icon_search"/>
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="13dp"
	            android:text="@string/dipai_search_hint"
	            android:textColor="@color/white"
	            android:textSize="15sp"
	            android:layout_gravity="center_vertical"/>
	    </LinearLayout>    
        
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent">
	        
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_marginLeft="24dp"
	            android:orientation="horizontal">
	            
		        <TextView
		            android:id="@+id/tv_recommand"
		            android:layout_width="24dp"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:text="@string/dipai_recommand"
		            android:textColor="@color/color_tab"
		            android:textSize="12sp"/>
		        
		        <TextView
		            android:id="@+id/tv_lvpai"
		            android:layout_width="24dp"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:layout_marginLeft="36dp"
		            android:text="@string/dipai_lvpai"
		            android:textColor="@color/color_tab"
		            android:textSize="12sp"/>   
		            
		        <TextView
		            android:id="@+id/tv_partment"
		            android:layout_width="24dp"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:layout_marginLeft="36dp"
		            android:text="@string/dipai_partment"
		            android:textColor="@color/color_tab"
		            android:textSize="12sp"/> 
		            
		        <TextView
		            android:id="@+id/tv_service"
		            android:layout_width="24dp"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:layout_marginLeft="36dp"
		            android:text="@string/dipai_service"
		            android:textColor="@color/color_tab"
		            android:textSize="12sp"/> 		        		        
	        </LinearLayout>
	        
	        <View
	            android:id="@+id/view_tabline"
	            android:layout_width="24dp"
	            android:layout_height="2dp"
	            android:background="@color/white"
	            android:layout_marginLeft="24dp"
	            android:layout_alignParentBottom="true"/>
	   </RelativeLayout>
    </LinearLayout>    
    
   <ScrollView
       android:id="@+id/sv_recommand"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
        
	   <LinearLayout
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:orientation="vertical">
	        
	       <RelativeLayout
	           android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="27dp"
	           android:layout_marginLeft="25dp"
	           android:layout_marginRight="25dp">
	           
	           <TextView
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:text="@string/dipai_hot"
	               android:textSize="19sp"
	               android:textColor="@color/color_text_gray"
	               android:layout_centerVertical="true"/>
	           
	           <TextView
	               android:id="@+id/tv_hot_all"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:text="@string/dipai_all"
	               android:textSize="16sp"
	               android:textColor="@color/color_text_gray_all"
	               android:layout_centerVertical="true"
	               android:layout_alignParentRight="true"/>		           
	       </RelativeLayout>    
	       
		    <Gallery  
		        android:id="@+id/gallery_hot"  
		        android:layout_width="match_parent"  
		        android:layout_height="wrap_content"  
		        android:layout_marginTop="27dp"
		        android:spacing="11dp"
		        android:gravity="left"/> 
		        
	       <RelativeLayout
	           android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="53dp"
	           android:layout_marginLeft="25dp"
	           android:layout_marginRight="25dp">
	           
	           <TextView
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:text="@string/dipai_local"
	               android:textSize="19sp"
	               android:textColor="@color/color_text_gray"
	               android:layout_centerVertical="true"/>
	           
	           <TextView
	               android:id="@+id/tv_local_all"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:text="@string/dipai_all"
	               android:textSize="16sp"
	               android:textColor="@color/color_text_gray_all"
	               android:layout_centerVertical="true"
	               android:layout_alignParentRight="true"/>		           
	       </RelativeLayout>    
	       
		    <Gallery  
		        android:id="@+id/gallery_local"  
		        android:layout_width="match_parent"  
		        android:layout_height="wrap_content"  
		        android:layout_marginLeft="25dp"
		        android:layout_marginTop="27dp"/> 	
		        
	       <RelativeLayout
	           android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="53dp"
	           android:layout_marginLeft="25dp"
	           android:layout_marginRight="25dp">
	           
	           <TextView
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:text="@string/dipai_gloable"
	               android:textSize="19sp"
	               android:textColor="@color/color_text_gray"
	               android:layout_centerVertical="true"/>
	           
	           <TextView
	               android:id="@+id/tv_gloable_all"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:text="@string/dipai_all"
	               android:textSize="16sp"
	               android:textColor="@color/color_text_gray_all"
	               android:layout_centerVertical="true"
	               android:layout_alignParentRight="true"/>		           
	       </RelativeLayout>    
	       
		    <Gallery  
		        android:id="@+id/gallery_gloable"  
		        android:layout_width="match_parent"  
		        android:layout_height="wrap_content"  
		        android:layout_marginLeft="25dp"
		        android:layout_marginTop="27dp"/> 
		        
	       <RelativeLayout
	           android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="53dp"
	           android:layout_marginLeft="25dp"
	           android:layout_marginRight="25dp">
	           
	           <TextView
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:text="@string/dipai_businiss"
	               android:textSize="19sp"
	               android:textColor="@color/color_text_gray"
	               android:layout_centerVertical="true"/>
	           
	           <TextView
	               android:id="@+id/tv_businiss_all"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:text="@string/dipai_all"
	               android:textSize="16sp"
	               android:textColor="@color/color_text_gray_all"
	               android:layout_centerVertical="true"
	               android:layout_alignParentRight="true"/>		           
	       </RelativeLayout>    
	       
		    <Gallery  
		        android:id="@+id/gallery_businiss"  
		        android:layout_width="match_parent"  
		        android:layout_height="wrap_content"  
		        android:layout_marginLeft="25dp"
		        android:layout_marginTop="27dp"/> 				    			    		    
	   </LinearLayout>  
   </ScrollView>
   
   <ListView
       android:id="@+id/lv_lvpai"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:divider="@null"
       android:visibility="gone"/>
   
   <ListView
       android:id="@+id/lv_pinpai"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:divider="@null"
       android:visibility="gone"/>
   
   <ListView
       android:id="@+id/lv_zhaoxun"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:divider="@null"
       android:visibility="gone"/>   
</LinearLayout>    