<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a000000">

    <LinearLayout
        android:id="@+id/parentPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="visible" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#E3E3E4">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:text="取消"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_alignParentRight="true"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:text="确定"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="283dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <com.app.sifanggou.view.wheelview.WheelView
                android:id="@+id/wv_zhiwei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:textColorCenter="#222222"
                app:lineSpaceingDimens="15dp"
                app:itemVisibleNum="7"
                app:textSizeCenter="18dp"
                app:textSizeOuter="16dp"
                app:isLoop="false"
                app:textColorOuter="#999999"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>